float x =0;
float y =0;
int dir_x =1;
int dir_y =1;

void setup()
{
  size(500,300);
  background(50);
  strokeWeight(5);

 }

void draw()
{
  background(50);
  stroke(255,0,0);  
  fill(230,200,20);
  ellipse(x+30, y+30,30,30);
  x = x+(3*dir_x);
  y = y+(2*dir_y);
    if ((x> width-30) ||(x < 0))
  {
    dir_x=dir_x*-1;
  }
  else
  {
    ;
  }
     if ((y> height-30) ||(y < 0))
  {
    dir_y=dir_y*-1;
  }
  else
  {
    ;
  }
  
 }
