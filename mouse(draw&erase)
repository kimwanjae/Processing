void setup(){
 size(400,400); 
 background(255);
}

void draw(){
  if(mousePressed){
    if(mouseButton == LEFT) {
     stroke(255,0,0);
     strokeWeight(5);
     line(pmouseX,pmouseY,mouseX,mouseY);
    } 
    if(mouseButton == RIGHT) {
    fill(255);
    noStroke();
    ellipse(mouseX,mouseY,30,30);
    }
  }
}
